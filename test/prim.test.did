/*
Encoding tests for primitive types
*/

// fundamentally wrong
() blob "" false "empty";
() blob "\00\00" false "no magic bytes";
() blob "DADL" false "wrong magic bytes";
() blob "DADL\00\00" false "wrong magic bytes";

// nullary input
() blob "DIDL\00\00" true;
() blob "DIDL\00\00\00" false "nullary: too long";
() blob "DIDL\00\01\7f" true "Additional parameters are ignored";

//primitive types
(null) blob "DIDL\00\01\7f" true;
(null) blob "DIDL\00\01\7f\00" false "null: too long";
(null) blob "DIDL\00\00" false "null: missing";

(bool) blob "DIDL\00\01\7e\00" true "bool: true";
(bool) blob "DIDL\00\01\7e\01" true "bool: false";
(bool) blob "DIDL\00\01\7e" false "bool: missing";
(bool) blob "DIDL\00\01\7e\02" false "bool: out of range";
(bool) blob "DIDL\00\01\7e\ff" false "bool: out of range";

(nat) blob "DIDL\00\01\7d\00" true "nat: 0";
(nat) blob "DIDL\00\01\7d\7f" true "nat: 0x7f";
(nat) blob "DIDL\00\01\7d\80\00" true "nat: leb (two bytes)";
(nat) blob "DIDL\00\01\7d\ff\7f" true "nat: leb (two bytes, all bits)";
(nat) blob "DIDL\00\01\7d\80" false "nat: leb too short";
(nat) blob "DIDL\00\01\7d\80\01" true "nat: leb overlong";




